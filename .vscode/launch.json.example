{
  // Configuraciones de debug para VS Code
  // Copiar a launch.json para usar
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: SvelteKit Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug: Server Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "-w", "server"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug: Migrate DB",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "tsx"],
      "args": ["${workspaceFolder}/server/scripts/migrate.ts"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug: Seed DB",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "tsx"],
      "args": ["${workspaceFolder}/server/scripts/seed.ts"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug: Invoice Processing Service",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["-r", "tsx"],
      "program": "${workspaceFolder}/server/services/invoice-processing.service.ts",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal"
    }
  ]
}
