{
  "directories": {
    "input": "./data/input",
    "processed": "./data/processed",
    "backup": "./data/backup",
    "exports": "./exports"
  },
  "database": {
    "path": "./data/database.sqlite"
  },
  "ocr": {
    "engine": "tesseract",
    "language": "spa",
    "dpi": 300,
    "preprocessingEnabled": true
  },
  "processing": {
    "autoProcess": false,
    "watchDirectory": false,
    "confidenceThreshold": 70,
    "requireManualValidation": false,
    "parallelWorkers": 2
  },
  "templates": {
    "autoDetect": true,
    "maxAttempts": 5,
    "fallbackToGeneric": true
  },
  "files": {
    "namingFormat": "{CUIT}_{DATE}_{TYPE}-{POS}-{NUM}",
    "dateFormat": "YYYYMMDD",
    "moveToProcessed": true,
    "createBackup": false,
    "calculateHash": true
  }
}
